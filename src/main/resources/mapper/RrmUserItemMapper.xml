<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rrm.module.user.mapper.RrmUserItemMapper">

    <delete id="deleteByItemId">
        delete from rrm_user_item where item_id = #{itemId}
    </delete>

    <delete id="deleteByUserId">
        delete from rrm_user_item where user_id = #{userId}
    </delete>

    <select id="getCorrelationUserId">
        select user_id from rrm_user_item where item_id = #{itemId}
    </select>
</mapper>